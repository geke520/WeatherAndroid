    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="空气污染指数"
        android:textSize="16sp"
        android:padding="8dp"
        android:id="@+id/index_item_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="良好"
        android:textSize="16sp"
        android:padding="8dp"
        android:id="@+id/index_item_desc"/>

</LinearLayout>